<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.Member">
	<cache />
	<select id="selectById" parameterType="String" resultType="Member">
		select * from member where id = #{id}
	</select>

	<select id="selectByEmail" parameterType="String" resultType="Member">
		select * from member where email = #{email}
	</select>

	<!-- db에 멤버 생성 -->
	<insert id="insert" parameterType="Member">
		insert into member values
		(#{id},#{pw},#{email},#{name},#{birth},#{gender},#{auth})
	</insert>
	<!-- 비밀번호 수정 -->
	<update id="update" parameterType="Member">
		update member
		set pw = #{newPw}
		where id = #{id}
	</update>
	<select id="memberList" resultType="Member">
		select * from member
	</select>
	<!-- 아이디 삭제 -->
	<select id="delete" resultType="Member">
		delete from member 
		where id=#{id} 
		and pw = #{pw}
	</select>
	
	<!-- 아이디 중복 체크  중복 = 1 아닐시 = 0-->
	<select id="idCheck" parameterType="int" resultType="int" >
		select count(*) from member	where id = #{id}
	</select>
	
	<!-- 이메일로 아이디 찾기  -->
	<select id="findId" parameterType="String" resultType="Member">
		select * from member where email = #{email}
	</select> 
	
	<!-- 아이디 찾기 -->
	<select id="find_id" parameterType="String" resultType="String">
		select id from member where email = #{email}
	</select>
	
	<!-- 이메일과 아이디로 비밀번호 찾기  -->
	<select id="findPw" parameterType="String" resultType="Member">
		select * from member where email = #{email} and id = #{id}
	</select>
	
</mapper>


