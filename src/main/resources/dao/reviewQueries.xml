<mapper namespace="dao.reviewQueries">
    <cache/>

    <select id="getReviewListOf_isbn_content" resultType="ReviewDTO">
        select REVIEW.isbn, REVIEW.content from REVIEW,BOOK where REVIEW.isbn=BOOK.ISBN
    </select>

    <select id="getReviewListOf_booksubject" resultType="BookDTO">
        select BOOK.BOOK_SUBJECT from REVIEW,BOOK where REVIEW.isbn=BOOK.ISBN
    </select>



