<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd
       http://www.springframework.org/schema/mvc
       http://www.springframework.org/schema/mvc/spring-mvc.xsd">
    <!--
    default set!!
    Change view-controller's path and view-name with referencing Startpage you made located in web-app directory.
    -->
    <context:component-scan base-package="controller,service"/>
    <mvc:default-servlet-handler/><!--경로를 가지고 자료를 이용할때 필요 (view-controller태그와 세트로 같이 넣어주느것이 좋음.)-->
    <mvc:view-controller path="/index" view-name="index"/>
    <mvc:annotation-driven/>
    <mvc:resources mapping="/imgs/**" location="/imgs/" cache-period="60" />

    <bean id="multipartResolver"
          class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding" value="utf-8"/>
    </bean>

    <!--view Resolver-->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/admin/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!--specify ""Daos"" to <bean> using <property> or <construct-arg>  -->
    <bean class="dao.BookDAO">
        <property name="mybatisConfigFile" value="dao/mybatis-Oracle.xml"/>
    </bean>
    <bean class="dao.BoardDAO">
        <property name="mybatisConfigFile" value="dao/mybatis-Oracle.xml"/>
    </bean>
    <bean class="dao.ReviewDAO">
        <property name="mybatisConfigFile" value="dao/mybatis-Oracle.xml"/>
    </bean>

    <!-- specify <bean> to "Services" type that uses qualifier.-->
<!--    <bean class="service.BookService" abstract="true">
        <qualifier type="service.BookService" value="bookService"/>
    </bean>-->
<!--    <bean class="service.BoardService" abstract="true">
        <qualifier type="service.Services" value="boardService"/>
    </bean>-->

    <!--proceeding part for errors-->
    <!--insert properties file's path and name that starts from Resources.-->
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>message.error</value>
            </list>
        </property>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>
</beans>
