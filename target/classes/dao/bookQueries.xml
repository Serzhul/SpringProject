<mapper namespace="dao.bookQueries">
    <cache/>

    <insert id="registerBook" parameterType="BookDTO">
        INSERT INTO BOOK VALUES
        (#{isbn},#{book_m_category},#{book_s_category},#{book_subject},#{book_writer},
         #{book_pday},#{book_summary},#{book_filename},#{book_filesize},#{book_price})
    </insert>

    <select id="getRegisteredBookList" resultType="BookDTO" >
        select BOOK_SUBJECT, ISBN, BOOK_WRITER, BOOK_M_CATEGORY, BOOK_S_CATEGORY, BOOK_PDAY,BOOK_PRICE from BOOK
    </select>

